        if(oPlayer.time%2 == 0){
            oPlayer.image_alpha = 0;
        }else{
            oPlayer.image_alpha = 1;
        }
    }else{
        oPlayer.time = 60;
        oPlayer.image_alpha = 1;
        oPlayer.invencible = false;
}
}


